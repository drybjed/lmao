server_host = ldap2.example.net ldap1.example.net
server_port = 389
version = 3
tls_ca_cert_file = /etc/ssl/example/example-ca.crt
start_tls = yes
timeout = 5
bind = yes
bind_dn = cn=postfix,dc=example,dc=com
bind_pw = secret
search_base = ou=imap.example.com,ou=virtual_mailbox_domains,dc=example,dc=com
scope = sub
query_filter = (ou=%s)
result_filter = OK
result_attribute = ou
