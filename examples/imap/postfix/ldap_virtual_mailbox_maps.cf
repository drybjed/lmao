server_host = ldap2.mendix.net ldap1.mendix.net
server_port = 389
version = 3
tls_ca_cert_file = /etc/ssl/mendix/mendix-ca.crt
start_tls = yes
timeout = 5
bind = yes
bind_dn = cn=postfix,dc=mendix,dc=com
bind_pw = secret
search_base = ou=%d,ou=imap.example.com,ou=virtual_mailbox_maps,dc=example,dc=com
scope = one
query_filter = (uid=%s)
result_filter = OK
result_attribute = uid

